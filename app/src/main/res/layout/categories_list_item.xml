<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/catLogo"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/book_logo" />

    <TextView
        android:id="@+id/catText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Categories"
        android:textColor="#5785c9"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/catLogo"
        app:layout_constraintStart_toStartOf="@+id/catLogo"
        app:layout_constraintTop_toBottomOf="@+id/catLogo" />
</androidx.constraintlayout.widget.ConstraintLayout>